<Window
    x:Class="MultiPlayerNIIES.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultiPlayerNIIES"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:view="clr-namespace:MultiPlayerNIIES.View"
    Title="MainWindow"
    Width="1200"
    Height="800"
    mc:Ignorable="d" Closing="Window_Closing">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <view:MenuView Grid.Row="0" />
        <Grid Grid.Row="1">
            <view:AreaVideoPlayersView Grid.Column="0"  x:Name="AreaVideoPlayers" />
        </Grid>
        <view:MainPanelView Grid.Row="2" />
    </Grid>
</Window>
