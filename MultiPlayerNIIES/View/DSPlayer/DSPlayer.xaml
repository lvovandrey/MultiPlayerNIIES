<UserControl x:Class="MultiPlayerNIIES.View.DSPlayer.DSPlayer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"              
             xmlns:local="clr-namespace:MultiPlayerNIIES.View.DSPlayer"
              xmlns:wf="clr-namespace:System.Windows.Forms;assembly=System.Windows.Forms"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" SizeChanged="UserControl_SizeChanged" >
    <Grid x:Name="MainGrid" ClipToBounds="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="2"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="2"/>
            <RowDefinition/>
            <RowDefinition Height="2"/>
        </Grid.RowDefinitions>
 
            <WindowsFormsHost ClipToBounds="True" x:Name="vlc"  Grid.Row="1" Grid.Column="1" Background="Yellow" VerticalAlignment="Stretch"  HorizontalAlignment="Stretch" >
                <wf:Panel x:Name="VideoPanel" BackColor="Black" Dock="Fill" />
            </WindowsFormsHost>
 
                <WindowsFormsHost x:Name="vlc2" Width="1" Height="1" VerticalAlignment="Bottom"  HorizontalAlignment="Right">
            <wf:Panel x:Name="VideoPanel2" BackColor="Red" Dock="Fill"/>
        </WindowsFormsHost>
    </Grid>
</UserControl>
