<UserControl
    x:Class="MultiPlayerNIIES.View.VideoPlayerView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:MultiPlayerNIIES.View.ValueConverters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:elements="clr-namespace:MultiPlayerNIIES.View.Elements"
    xmlns:ffme="clr-namespace:Unosquare.FFME;assembly=ffme.win"
    xmlns:local="clr-namespace:MultiPlayerNIIES.View"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:mvlc="clr-namespace:MultiPlayerNIIES.View.MetaVLCPlayer"
    xmlns:vlc="clr-namespace:MultiPlayerNIIES.View.VLCPlayer"
    d:DesignHeight="450"
    d:DesignWidth="800"
    PreviewMouseDown="UserControl_PreviewMouseDown"
    mc:Ignorable="d"
    x:Name="This">
    <UserControl.Resources>
        <converters:BoolFocusToColor x:Key="BoolFocusToColor" />
        <converters:BoolSyncLeaderToColor x:Key="BoolSyncLeaderToColor" />
        <converters:BoolIsSyncLeaderToVisibility x:Key="BoolIsSyncLeaderToVisibility" />
            <Style x:Key="BtnStyle" TargetType="Button">
                <Setter Property="Width" Value="15"/>
                <Setter Property="Height" Value="15"/>
            <Setter Property="Margin" Value="30,0,0,25"/>
                <Style.Triggers>
                    <Trigger Property="IsMouseOver" Value="True">
                        <Setter Property="Width" Value="25"/>
                        <Setter Property="Height" Value="25"/>
                        <Setter Property="Margin" Value="25,0,0,20"/>
                        <Setter Property="Background" Value="{x:Null}"/>
                    </Trigger>


                </Style.Triggers>
            </Style>
    </UserControl.Resources>
    <Grid
        x:Name="MainGrid"
        Background="{Binding Focus, Converter={StaticResource BoolFocusToColor}}"
        ClipToBounds="True">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5" />
            <ColumnDefinition />
            <ColumnDefinition Width="5" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="5" />
            <RowDefinition Height="14" />
            <RowDefinition />
            <RowDefinition Height="30" x:Name="SyncronizationInstrumentsRow"/>
            <RowDefinition Height="5" />
        </Grid.RowDefinitions>

        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Left"
            Panel.ZIndex="3"
            Orientation="Horizontal">
            <Grid Cursor="Hand" MouseUp="SyncLeadIndicator_MouseUp">
                <TextBlock
                    Margin="10,2,0,0"
                    Panel.ZIndex="101"
                    FontSize="9"
                    Foreground="White">
                    Sync
                </TextBlock>
                <Rectangle
                    x:Name="SyncLeadIndicator"
                    Width="40"
                    Margin="0,0,10,0"
                    Panel.ZIndex="100"
                    Fill="{Binding IsSyncronizeLeader, Converter={StaticResource BoolSyncLeaderToColor}, UpdateSourceTrigger=PropertyChanged}"
                    Stroke="DodgerBlue"
                    StrokeThickness="1" />
            </Grid>
            <TextBlock
                x:Name="TextBlockSubtitles"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                Panel.ZIndex="1"
                Background="#7FFFFFFF"
                Text="..." />

        </StackPanel>
        <StackPanel
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            HorizontalAlignment="Right"
            Panel.ZIndex="3"
            Orientation="Horizontal">
            <Button x:Name="Maximize">
                <Image Source="/MultiPlayerNIIES;component/Images/PNG/Arrow-Inout.png" />
            </Button>
            <Button x:Name="Close" Click="Close_Click">
                <Image Source="/MultiPlayerNIIES;component/Images/PNG/Cross.png" />
            </Button>
        </StackPanel>


        <mvlc:MVLCPlayer
            x:Name="VLC"
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            PreviewMouseWheel="VLC_PreviewMouseWheel" />


        <Button x:Name="ButtonHideInstruments"  
                 Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
         
            Opacity="0.7"  HorizontalAlignment="Left" VerticalAlignment="Bottom" Style="{StaticResource BtnStyle}" Background="{x:Null}" Click="ButtonHideInstruments_Click">
            <Image Source="/MultiPlayerNIIES;component/Images/PNG/Gnome-Object-Flip-Vertical-64.png"/>
        </Button>

        <elements:SyncronizationShiftView
            x:Name="SyncronizationShiftViewer"
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="3"

            VerticalAlignment="Bottom"
            DataContext="{Binding SyncronizationShiftVM}"
            Visibility= "{Binding ElementName=This, Path=DataContext.IsSyncronizeLeader, Converter={StaticResource BoolIsSyncLeaderToVisibility}, UpdateSourceTrigger=PropertyChanged}" 
            />

        <!--<vlc:VLCPlayer Grid.Row="2" Grid.Column="1" x:Name="VLC"></vlc:VLCPlayer>-->
        <!--<MediaElement x:Name="ME" LoadedBehavior="Manual" Stretch="Fill"/>-->
        <!--<ffme:MediaElement x:Name="FFME" LoadedBehavior="Manual" Stretch="Fill"/>-->

    

        <Rectangle
            x:Name="Dragger"
            Grid.Row="0"
            Grid.RowSpan="2"
            Grid.Column="0"
            Grid.ColumnSpan="3"
            Panel.ZIndex="1"
            Cursor="SizeAll"
            Fill="#99000000" />

        <Rectangle
            x:Name="SizerRightBottom"
            Grid.Row="4"
            Grid.Column="2"
            Panel.ZIndex="2"
            Cursor="SizeNWSE"
            Fill="#00000000"
            MouseDown="Sizer_MouseDown" />
        <Rectangle
            x:Name="SizerLeftTop"
            Grid.Row="0"
            Grid.Column="0"
            Panel.ZIndex="2"
            Cursor="SizeNWSE"
            Fill="#00000000"
            MouseDown="Sizer_MouseDown" />
        <Rectangle
            x:Name="SizerLeftBottom"
            Grid.Row="4"
            Grid.Column="0"
            Panel.ZIndex="2"
            Cursor="SizeNESW"
            Fill="#00000000"
            MouseDown="Sizer_MouseDown" />
        <Rectangle
            x:Name="SizerRightTop"
            Grid.Row="0"
            Grid.Column="2"
            Panel.ZIndex="2"
            Cursor="SizeNESW"
            Fill="#00000000"
            MouseDown="Sizer_MouseDown" />

        <Rectangle
            x:Name="SizerBottom"
            Grid.Row="4"
            Grid.Column="1"
            Panel.ZIndex="2"
            Cursor="SizeNS"
            Fill="#00000000"
            MouseDown="Sizer_MouseDown" />
        <Rectangle
            x:Name="SizerTop"
            Grid.Row="0"
            Grid.Column="1"
            Panel.ZIndex="2"
            Cursor="SizeNS"
            Fill="#00000000"
            MouseDown="Sizer_MouseDown" />
        <Rectangle
            x:Name="SizerLeft"
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="0"
            Panel.ZIndex="2"
            Cursor="SizeWE"
            Fill="#00000000"
            MouseDown="Sizer_MouseDown" />
        <Rectangle
            x:Name="SizerRight"
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="2"
            Panel.ZIndex="2"
            Cursor="SizeWE"
            Fill="#00000000"
            MouseDown="Sizer_MouseDown" />


    </Grid>
</UserControl>
