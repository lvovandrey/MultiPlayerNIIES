<UserControl x:Class="MultiPlayerNIIES.View.TimeStripes.Stripe"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiPlayerNIIES.View.TimeStripes"
             xmlns:converters="clr-namespace:MultiPlayerNIIES.View.ValueConverters"
             mc:Ignorable="d" 
             d:DesignHeight="10" d:DesignWidth="800" Height="10">
    <UserControl.Resources>
        <converters:DoubleWithAdditionConverter x:Key="DoubleWithAdditionConverter"/>
    </UserControl.Resources>
    <Grid>

        <Rectangle >
            <Rectangle.Fill>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFB07220" Offset="0"/>
                    <GradientStop Color="#FF805823" Offset="1"/>
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>
        <Rectangle Fill="#80ffffff" 
                   Width= "{Binding ElementName=Info, Path=ActualWidth, Converter={StaticResource DoubleWithAdditionConverter}, ConverterParameter=10}" 
                   HorizontalAlignment="Center" Height="9" Margin="0 0.5 0 0" VerticalAlignment="Center" Stroke="DarkBlue" StrokeThickness="0.5" RadiusX="2" RadiusY="2"/>
        <!--"{Binding ElementName=Info, Path=ActualWidth, Converter={StaticResource DoubleWithAdditionConverter}, ConverterParameter=10}"-->

        <TextBlock x:Name="Info" Text="Название видеозаписи" HorizontalAlignment="Center" FontSize="7" VerticalAlignment="Center" Margin="0 -1 0 0">
            <TextBlock.ToolTip>
                <StackPanel Background="Wheat">
                    <TextBlock Text="{Binding ElementName=Info, Path=Text,UpdateSourceTrigger=PropertyChanged}"/>
                    <TextBlock Text="00:01:12,32"/>
                </StackPanel>
            </TextBlock.ToolTip>
        </TextBlock>
    </Grid>
</UserControl>
