<Window x:Class="MultiPlayerNIIES.View.TimeDiffElements.TimeDIffWindowWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MultiPlayerNIIES.View.TimeDiffElements"
        mc:Ignorable="d"
        Title="TimeDIffWindowWindow" Height="450" Width="800" Closing="Window_Closing">
    <Grid >
        <Grid x:Name="MainGrid">
        </Grid>
        <Grid >
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition Width="3" />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Rectangle Fill="Black" Grid.Column="1"/>
            <TextBlock Text="{Binding TimeDiffMeasured, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" Grid.Column="0" HorizontalAlignment="Center" Height="20" Grid.ColumnSpan="3" Background="Aqua"/>
        </Grid>
    </Grid>
</Window>
