<UserControl x:Class="MultiPlayerNIIES.View.TimeDiffElements.Column"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiPlayerNIIES.View.TimeDiffElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Width="300">
    <Grid>
        <Rectangle HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="3" Stroke="#FFB07220" StrokeThickness="2" ></Rectangle>
        <TextBlock  Text="{Binding TimeDiffMeasured, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                       FontSize="14"
                       VerticalAlignment="Top"
                       Margin="5"
                       HorizontalAlignment="Center" 
                       Height="20" Foreground="#FFB07220" />
        <TextBlock
                       Text="{Binding ColNumber, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" 
                       FontSize="14"
                       VerticalAlignment="Top"
                       HorizontalAlignment="Left"
                       Margin="5"
                       Height="20" Foreground="#FFB07220" />
    </Grid>
</UserControl>
