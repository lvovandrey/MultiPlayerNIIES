<UserControl
    x:Class="MultiPlayerNIIES.View.Elements.WaitProgressBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:MultiPlayerNIIES.View.Elements"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="100"
    d:DesignWidth="200"
    mc:Ignorable="d">
    <Grid Background="#4CFFFFFF">
        <StackPanel Orientation="Vertical">
            <TextBlock
                x:Name="TextBlockInfo"
                Margin="10 10 10 0"
                HorizontalAlignment="Center"
                Text="Ждите. Идет синхронизация" />
            <ProgressBar
                x:Name="WaitProgressBar1"
                Height="40"
                Margin="10 0 10 0" />
        </StackPanel>
    </Grid>
</UserControl>
