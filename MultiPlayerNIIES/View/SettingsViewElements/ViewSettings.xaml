<UserControl x:Class="MultiPlayerNIIES.View.SettingsViewElements.ViewSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MultiPlayerNIIES.View.SettingsViewElements"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid>
        <GroupBox Header="Вид" >
            <StackPanel>

                <CheckBox Margin="5"
                             IsChecked="{Binding ShowFullNameInPlayerHeader, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}">Отображать полный путь к файлу в шапке плеера</CheckBox>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
